<resources>

    <!-- App -->

    <style name="Widget.Theme.BTGChallenge.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.BTGChallenge.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- Texts -->

    <style name="DefaultTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BoldTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LittleTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ErrorTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextViewBigStyle" parent="android:Widget.TextView">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextViewTitleStyle" parent="android:Widget.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Buttons -->

    <style name="DefaultButtonStyle" parent="android:Widget.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>